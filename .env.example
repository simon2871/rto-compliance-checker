# RTO Compliance Checker Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# AI API Keys (minimum: OpenAI + Anthropic recommended)
# Get these from the respective AI provider websites

# OpenAI API Key (for GPT-4 models)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Anthropic Claude API Key (for Claude models)
# https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# DeepSeek API Key (optional, for cost-effective operations)
# https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here

# Web Scraping Configuration
PUPPETEER_HEADLESS=true
SCRAPING_TIMEOUT=30000
MAX_CONCURRENT_SCANS=5
USER_AGENT=RTO-Compliance-Checker/1.0

# Compliance Settings
COMPLIANCE_THRESHOLD=95
ENABLE_AI_ANALYSIS=true
REPORT_CACHE_TTL=3600

# Security Settings
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_REQUESTS=20

# Feature Flags
ENABLE_BATCH_SCANNING=true
ENABLE_REPORT_GENERATION=true
ENABLE_AI_ANALYSIS=true

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./data/uploads

# Database (for future use)
# DATABASE_URL=mongodb://localhost:27017/rto-compliance
# REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Development Settings
DEBUG=rto-compliance:*
ENABLE_CORS=true
ENABLE_HELMET=true